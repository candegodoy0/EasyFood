<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/txtNombreRecetaItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre de la Receta Guardada"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/btnFavoritoItem"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/guardado_vacio"
            android:padding="4dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Favorito"
            app:tint="@color/gris_texto" />

        <ImageView
            android:id="@+id/btnOpciones"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/tres_puntos"
            android:padding="4dp"
            android:contentDescription="Opciones"
            app:tint="@color/gris_texto" />

    </LinearLayout>
</androidx.cardview.widget.CardView>