<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- fila con boton atras y titulo de la pantalla -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <!-- boton de volver -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/flecha_atras"/>

        <!-- titulo de la pantalla -->
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receta sorpresa"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <!-- parrafo explicativo centrado -->
    <TextView
        android:id="@+id/txtDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Te proponemos una receta al azar para que te inspires"
        android:textSize="14sp"
        android:textColor="#757575"
        android:gravity="center_horizontal"
        android:layout_marginBottom="40dp"/>

    <!-- boton principal para buscar receta -->
    <Button
        android:id="@+id/btnBuscarReceta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUSCAR RECETA"
        android:backgroundTint="@color/amarilloBoton"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
